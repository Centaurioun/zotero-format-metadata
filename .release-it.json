{
  "git": {
    "commitMessage": "chore(publish): release v${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": false,
    "assets": ["build/*.xpi", "update.json"]
  },
  "hooks": {
    "bfore:init": "npm run lint",
    "after:bump": "npm run build"
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md",
      "addUnreleased": true,
      "addVersionUrl": true
    }
  }
}
